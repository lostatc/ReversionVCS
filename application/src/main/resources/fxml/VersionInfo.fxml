<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="versionInfoPane" spacing="50.0" type="VBox"
         xmlns="http://javafx.com/javafx/11.0.1" fx:controller="io.github.lostatc.reversion.gui.VersionList">
    <children>
        <FlowPane hgap="50.0" vgap="25.0">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="info-key" text="Keep Forever"/>
                        <JFXCheckBox fx:id="pinnedCheckBox" styleClass="info-value" text="Pinned"/>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="info-key" text="Last Modified"/>
                        <Label fx:id="lastModifiedLabel" styleClass="info-value"/>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="info-key" text="Size"/>
                        <Label fx:id="sizeLabel" styleClass="info-value"/>
                    </children>
                </VBox>
            </children>
        </FlowPane>
        <VBox>
            <children>
                <Label styleClass="info-key" text="Name"/>
                <JFXTextField fx:id="nameField"/>
            </children>
        </VBox>
        <VBox>
            <children>
                <Label styleClass="info-key" text="Description"/>
                <JFXTextArea fx:id="descriptionField" maxHeight="1.7976931348623157E308" wrapText="true"/>
            </children>
        </VBox>
        <FlowPane alignment="BOTTOM_LEFT" hgap="30.0" vgap="15.0" VBox.vgrow="ALWAYS">
            <children>
                <JFXButton onAction="#deleteVersion" styleClass="button-danger" text="Delete"/>
                <JFXButton onAction="#restoreVersion" styleClass="button-default" text="Restore"/>
                <JFXButton onAction="#openVersion" styleClass="button-default" text="Open"/>
            </children>
        </FlowPane>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</fx:root>
