<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import io.github.lostatc.reversion.gui.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="io.github.lostatc.reversion.gui.mvc.WorkDirectoryManagerController">
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <styleClass>
            <String fx:value="background"/>
            <String fx:value="pane-box"/>
        </styleClass>
        <VBox minWidth="200.0" prefWidth="400.0" spacing="15.0">
            <JFXListView fx:id="workDirectoryList" depth="2" styleClass="card-list-view" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Card styleClass="placeholder" subtitle="Add a directory to start tracking changes"
                          title="No tracked directories"/>
                </placeholder>
            </JFXListView>
            <HBox alignment="CENTER_LEFT" spacing="5.0" styleClass="pane">
                <IconButton icon="gmi-add" onAction="#addWorkDirectory" styleClass="icon-button-light"/>
                <Label text="Track new directory"/>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </HBox>
        </VBox>
        <StackPane minWidth="400.0" prefWidth="600.0" styleClass="pane" HBox.hgrow="ALWAYS">
            <VBox fx:id="infoPane" spacing="25.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                </padding>
                <JFXListView fx:id="cleanupPolicyList" depth="2" styleClass="card-list-view" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Card styleClass="placeholder" subtitle="Add a rule to automatically clean up old versions"
                              title="There are no cleanup rules"/>
                    </placeholder>
                </JFXListView>
                <HBox alignment="CENTER" spacing="10.0">
                    <VBox>
                        <Label styleClass="info-key" text="Versions">
                            <tooltip>
                                <Tooltip text="Limit the maximum number of versions to keep."/>
                            </tooltip>
                        </Label>
                        <JFXTextField fx:id="versionsTextField" prefColumnCount="6"/>
                    </VBox>
                    <VBox>
                        <Label styleClass="info-key" text="Time">
                            <tooltip>
                                <Tooltip text="Limit how long to keep each version for."/>
                            </tooltip>
                        </Label>
                        <JFXTextField fx:id="timeField" prefColumnCount="6"/>
                    </VBox>
                    <VBox>
                        <Label styleClass="info-key" text="Unit">
                            <tooltip>
                                <Tooltip text="Set the unit to measure time in."/>
                            </tooltip>
                        </Label>
                        <JFXComboBox fx:id="unitComboBox" prefWidth="120.0"/>
                    </VBox>
                    <Region prefWidth="20.0"/>
                    <IconButton icon="gmi-add" onAction="#addCleanupPolicy" styleClass="icon-button-light"/>
                    <IconButton icon="gmi-remove" onAction="#removeCleanupPolicy" styleClass="icon-button-light"/>
                </HBox>
                <Region VBox.vgrow="SOMETIMES"/>
                <FlowPane hgap="30.0" vgap="15.0">
                    <JFXButton onAction="#repairRepository" text="Repair">
                        <styleClass>
                            <String fx:value="button-text"/>
                            <String fx:value="button-regular"/>
                        </styleClass>
                    </JFXButton>
                </FlowPane>
            </VBox>
        </StackPane>
    </HBox>
</AnchorPane>
