<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml/1" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="640.0" styleClass="grey-200" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="io.github.lostatc.reversion.gui.VersionSelectController">
    <children>
        <JFXToolbar styleClass="grey-50">
            <top>
                <HBox alignment="CENTER" minHeight="50.0" nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                    <children>
                        <JFXButton buttonType="RAISED" onAction="#browsePath" styleClass="button-default"
                                   text="Browse"/>
                        <JFXButton onAction="#setPath" styleClass="button-confirm" text="OK">
                            <HBox.margin>
                                <Insets left="15.0"/>
                            </HBox.margin>
                        </JFXButton>
                        <JFXTextField fx:id="pathField" nodeOrientation="LEFT_TO_RIGHT" onAction="#setPath"
                                      promptText="Path" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="15.0"/>
                            </HBox.margin>
                        </JFXTextField>
                    </children>
                </HBox>
            </top>
        </JFXToolbar>
        <HBox prefHeight="100.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <children>
                <JFXListView fx:id="versionList" depth="1" minWidth="200.0" prefWidth="400.0"
                             styleClass="card-list-view">
                    <HBox.margin>
                        <Insets right="15.0"/>
                    </HBox.margin>
                </JFXListView>
                <StackPane minHeight="200.0" minWidth="400.0" prefWidth="600.0" HBox.hgrow="SOMETIMES">
                    <styleClass>
                        <String fx:value="grey-50"/>
                        <String fx:value="depth-1"/>
                    </styleClass>
                    <children>
                        <VBox fx:id="versionInfoPane" minHeight="200.0" minWidth="400.0" prefWidth="600.0"
                              spacing="50.0">
                            <children>
                                <FlowPane hgap="30.0" vgap="15.0" VBox.vgrow="NEVER">
                            <children>
                                <VBox>
                                    <children>
                                        <Label styleClass="info-key" text="Keep Forever"/>
                                        <JFXCheckBox fx:id="versionPinnedCheckBox" onAction="#saveVersionInfo"
                                                     styleClass="info-value" text="Pinned"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label styleClass="info-key" text="Last Modified"/>
                                        <Label fx:id="versionModifiedLabel" styleClass="info-value"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label styleClass="info-key" text="Size"/>
                                        <Label fx:id="versionSizeLabel" styleClass="info-value"/>
                                    </children>
                                </VBox>
                            </children>
                        </FlowPane>
                                <JFXTextField fx:id="versionNameField" onAction="#saveVersionInfo" promptText="Name"
                                              VBox.vgrow="NEVER"/>
                                <JFXTextField fx:id="versionDescriptionField" onAction="#saveVersionInfo"
                                              promptText="Description" VBox.vgrow="NEVER"/>
                        <FlowPane alignment="BOTTOM_LEFT" hgap="30.0" vgap="15.0" VBox.vgrow="ALWAYS">
                            <children>
                                <JFXButton styleClass="button-danger" text="Delete"/>
                                <JFXButton styleClass="button-default" text="Restore"/>
                                <JFXButton styleClass="button-default" text="Open"/>
                            </children>
                        </FlowPane>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </padding>
                            <styleClass>
                                <String fx:value="grey-50"/>
                                <String fx:value="depth-1"/>
                            </styleClass>
                        </VBox>
                    </children>
                </StackPane>
            </children>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@../css/jfoenix-fonts.css"/>
        <URL value="@../css/jfoenix-design.css"/>
        <URL value="@../css/application.css"/>
    </stylesheets>
</VBox>
